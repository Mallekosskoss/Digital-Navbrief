<!DOCTYPE html>
<html>
<head>
    <title>PowerPoint Table Extraction</title>
</head>
<body>
    <h1>PowerPoint Table Extraction</h1>
    <button id="extractButton">Extract Tables</button>

    <script>
        document.getElementById('extractButton').addEventListener('click', function() {
            const pptx = require('node-pptx');
            
            // Specify the path to your PowerPoint file
            const pptxPath = '../data_inn/Navbrief MPN5 Vestland dag 1.pptx';

            // Specify the title of the slide from which you want to extract tables
            const targetSlideTitle = 'Status pÃ¥ navigasjonsutstyr';

            // Load the PowerPoint presentation
            const presentation = new pptx(pptxPath);

            // Find the slide with the specified title
            const targetSlide = presentation.findSlideByTitle(targetSlideTitle);

            if (!targetSlide) {
                console.error(`Slide with title "${targetSlideTitle}" not found.`);
                return;
            }

            // Extract tables from the target slide
            const tables = targetSlide.getTables();

            // Process the extracted tables
            tables.forEach((table, index) => {
                console.log(`Table ${index + 1}:`);
                table.rows.forEach((row) => {
                    const rowData = row.cells.map((cell) => cell.text);
                    console.log(rowData.join('\t'));
                });
                console.log();
            });

            // Clean up after use
            presentation.close();
        });
    </script>
</body>
</html>